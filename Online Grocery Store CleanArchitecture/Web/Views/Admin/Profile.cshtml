@model Domain.Entities.User

<partial name="_PVAdminIndex" model="Model" />

<style>
    /* Adjusting Content for Navbar and Sidebar */
    .main-content {
        margin-top: 80px; /* Adds space for the fixed navbar */
        margin-left: 270px; /* Adds space for the fixed sidebar */
        padding-right: 15px; /* Ensure no content overlaps on the right side */
    }

    .container {
        padding-left: 30px;
        padding-right: 30px;
    }

    /* Custom Styles for User Profile */
    .card-body {
        background-color: #f4f4f4;
        border-radius: 12px;
        padding: 20px;
    }

    .text-dark {
        color: #333333;
    }

    .bg-light {
        background-color: #f7f7f7;
    }

    .p-3 {
        padding: 15px;
    }

    .rounded-3 {
        border-radius: 10px;
    }

    .btn-dark {
        background-color: #333333;
        color: #fff;
        border-radius: 25px;
        padding: 10px 30px;
        font-size: 16px;
    }

    .btn-dark:hover {
        background-color: #555555;
        color: #fff;
        border: none;
    }

    /* Profile Picture */
    img.rounded-circle {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Title and Text */
    h4 {
        font-size: 24px;
        font-weight: 600;
    }

    h5 {
        font-size: 20px;
    }

    /* Adjusting Row for Email and User Type */
    .row.mb-3 {
        margin-bottom: 20px;
    }
</style>

<div class="container my-5 main-content">
    <h2 class="text-center mb-5 fw-bold text-dark">User Profile</h2>
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="row align-items-center">
            <!-- Profile Picture Section -->
            <div class="col-md-4 text-center">
                <img src="/images/Profile1.jpg" alt="Profile Photo" class="rounded-circle shadow-lg" style="width: 150px; height: 150px; object-fit: cover;">
                <h4 class="mt-3 text-dark fw-bold">@Model.Username</h4>
            </div>

            <!-- User Details Section -->
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="text-muted mb-4">Profile Details</h5>

                    <!-- User Info -->
                    <div class="row mb-3">
                        <div class="col-md-4 text-dark fw-bold">Email:</div>
                        <div class="col-md-8 text-dark bg-light p-3 rounded-3">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-dark fw-bold">User Type:</div>
                        <div class="col-md-8 text-dark bg-light p-3 rounded-3">@Model.UserType</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
