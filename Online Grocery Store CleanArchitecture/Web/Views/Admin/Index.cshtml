@{
    ViewData["Title"] = "Manage Products";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    /* Main Content Styling */
    .main-content {
        margin-left: 270px; /* Offset for sidebar */
        margin-top: 80px; /* Offset for navbar */
        padding: 20px;
    }

        /* Center-align the Manage Products heading */
        .main-content h1 {
            text-align: center;
            font-size: 36px;
            color: #333333;
            margin-bottom: 30px;
        }

    .stats {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    /* Stat Cards Styling */
    .stat-card {
        background: linear-gradient(to right, #333333, #4f4f4f); /* Black-to-gray gradient */
        border-radius: 12px;
        padding: 30px;
        text-align: center;
        width: 30%;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        color: white;
        transition: transform 0.3s ease;
    }

        .stat-card h3 {
            margin-bottom: 10px;
            font-size: 28px;
            font-weight: bold;
        }

        .stat-card p {
            font-size: 18px;
            opacity: 0.8;
        }

        .stat-card:hover {
            transform: translateY(-5px); /* Hover effect */
        }

    /* Graph Section */
    .graph-container {
        background: linear-gradient(to right, #ffffff, #dcdcdc); /* White-to-light gray gradient */
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        color: black;
    }

        .graph-container h3 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333333;
        }

    /* Chart styling */
    canvas {
        max-width: 100%;
        border-radius: 8px;
    }

    /* Navbar Styling */
    .navbar {
        background: linear-gradient(to right, #343a40, #212529);
        color: white;
        padding: 15px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        font-family: 'Poppins', sans-serif;
    }

        .navbar .navbar-brand {
            color: white;
            text-decoration: none;
            font-size: 28px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .navbar .navbar-nav {
            list-style: none;
            display: flex; /* Flexbox to align horizontally */
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
        }

            .navbar .navbar-nav li {
                margin-right: 20px; /* Space between items */
            }

            .navbar .navbar-nav a {
                color: white;
                text-decoration: none;
                font-size: 18px;
                padding: 10px 20px;
                border-radius: 5px;
                font-weight: 500;
                transition: background 0.3s ease, transform 0.3s ease;
            }

                .navbar .navbar-nav a:hover {
                    background-color: #495057;
                    color: #ffc107;
                    transform: translateY(-2px);
                }

        .navbar .logout-btn {
            background: linear-gradient(to right, #dc3545, #b02a37);
            color: white;
            border: none;
            padding: 12px 24px;
            font-size: 18px;
            border-radius: 30px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.4);
        }
</style>


<partial name="_PVAdminIndex" model="Model" />

<br />
<br />

<!-- Main Content -->
<div class="main-content">
    <h1>Manage Products</h1>

    <!-- Stats Section -->
    <div class="stats">
        <div class="stat-card">
            <h3>150</h3>
            <p>Total Products</p>
        </div>
        <div class="stat-card">
            <h3>25</h3>
            <p>Pending Orders</p>
        </div>
        <div class="stat-card">
            <h3>12</h3>
            <p>Registered Users</p>
        </div>
    </div>

    <!-- Graph Section (Dummy Data) -->
    <div class="graph-container">
        <h3>Sales Overview</h3>
        <canvas id="salesGraph"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('salesGraph').getContext('2d');
        var salesGraph = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
                datasets: [{
                    label: 'Sales',
                    data: [120, 150, 180, 200, 170],
                    backgroundColor: '#333333', // Black color for bars
                    borderColor: '#ffffff', // White border color
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</div>
