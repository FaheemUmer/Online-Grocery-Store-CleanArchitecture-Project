@model IEnumerable<Domain.Entities.Order>

<partial name="_PVAdminIndex" model="Model" />

<div class="container my-5 main-content">
    <h2 class="text-center mb-5 fw-bold text-dark">Manage Orders</h2>

    <!-- Orders Table -->
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Order ID</th>
                    <th>User ID</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.UserId</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @{
                                string badgeClass = "";
                                switch (order.Status.ToLower())
                                {
                                    case "pending":
                                        badgeClass = "badge-warning";
                                        break;
                                    case "shipped":
                                        badgeClass = "badge-info";
                                        break;
                                    case "delivered":
                                        badgeClass = "badge-success";
                                        break;
                                    default:
                                        badgeClass = "badge-secondary";
                                        break;
                                }
                            }
                            <span class="badge @badgeClass">@order.Status</span>
                        </td>
                        <td>Rs.@order.TotalAmount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Styling for Orders Page -->
<style>
    .table th, .table td {
        text-align: center;
        padding: 12px 15px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

        .table-bordered th, .table-bordered td {
            border: 1px solid #ddd;
        }

    .thead-dark {
        background-color: #343a40;
        color: #ffffff;
    }

    .card {
        margin-top: 30px;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .badge-warning {
        background-color: #ffc107;
    }

    .badge-info {
        background-color: #17a2b8;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-secondary {
        background-color: #6c757d;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Adjustments for Sidebar and Navbar Overlap */
    .main-content {
        margin-left: 220px; /* Space for sidebar */
        margin-top: 80px; /* Space for navbar */
    }

    /* Making the table responsive */
    .table-responsive {
        overflow-x: auto;
    }

    /* Styling Order Details */
    .order-details ul {
        padding-left: 20px;
        text-align: left;
    }

    .order-details li {
        margin-bottom: 10px;
    }
</style>
