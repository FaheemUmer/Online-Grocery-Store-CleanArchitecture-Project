@{
	Layout = null;
}

<head>
	<meta charset="UTF-8">
	<meta name="viewpo rt" content="width=device-width, initial-scale=1.0">
	<title>Online Grocery Store</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Bootstrap Icons -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<!-- Custom CSS -->
<style>
    /* General styles for the container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Feature Box Styles */
    .feature-box {
        border: 2px solid #f0f0f0;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        text-align: center;
    }

    .feature-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    /* Feature Box Icon Styles */
    .feature-box i {
        font-size: 3rem;
        color: #007bff; /* You can change the icon color here */
    }

    /* Feature Box Title */
    .feature-box h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 15px;
    }

    /* Feature Box Text */
    .feature-box p {
        color: #555;
        font-size: 1rem;
        margin-top: 10px;
    }

    /* Style for the row */
    .row {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    /* Column styling for each feature */
    .col-md-4 {
        flex: 1 1 30%;
        max-width: 30%;
    }

        #fixed-cart-icon {
            position: absolute; /* Changes position to scroll with the page */
            left: 15px; /* Place it near the left edge */
            top: 50%; /* Vertical placement on the page */
            transform: translateY(-50%);
            z-index: 1050; /* Keeps the icon above other content */
            background-color: black; /* Blue background */
            color: white; /* White icon color */
            padding: 20px; /* Increased padding for larger size */
            border-radius: 50%; /* Makes the icon circular */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adds shadow for a modern look */
            cursor: pointer; /* Changes cursor to pointer on hover */
        }

            #fixed-cart-icon i {
                font-size: 2rem; /* Increased font size for a bigger icon */
            }

            #fixed-cart-icon:hover {
                background-color: gray; /* Darker blue on hover */
            }
</style>


</head>

<body>
    @* SignalR Works Notification *@
    <div id="notification-box" style="display: none; position: fixed; bottom: 20px; right: 20px; background: rgba(0,0,0,0.8); color: white; padding: 15px; border-radius: 5px;">
        <span id="notification-message"></span>
    </div>
@*     <div id="fixed-cart-icon">
        <i class="bi bi-cart4"></i>
    </div> *@

    <a id="fixed-cart-icon" asp-controller="Product" asp-action="Cart">
        <i class="bi bi-cart4"></i>
    </a>

	<partial name="_PVHome" model="Model" />

	<partial name="_PVSlider" model="Model" />

	<partial name="_PVCategories" model="Model" />

	<partial name="_PVfeature" model="Model" />

	<partial name="_PVFooter" model="Model" />

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Adjust the position dynamically as you scroll
        document.addEventListener("scroll", () => {
            const scrollPosition = window.scrollY + window.innerHeight / 2;
            document.getElementById("fixed-cart-icon").style.top = `${scrollPosition}px`;
        });
    </script>
</body>

</html>