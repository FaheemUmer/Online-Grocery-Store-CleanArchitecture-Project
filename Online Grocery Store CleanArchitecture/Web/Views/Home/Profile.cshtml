@model Domain.Entities.User

<partial name="_PVHome" model="Model" />

<style>
    /* Custom Styles for User Profile */
    .card-body {
        background-color: #f4f4f4; /* Light gray background for the card body */
        border-radius: 12px; /* Soft rounded corners for the whole card */
        padding: 20px; /* Generous padding for the content */
    }

    .text-dark {
        color: #333333; /* Dark text color for readability */
    }

    .bg-light {
        background-color: #f7f7f7; /* Light gray background for details */
    }

    .p-3 {
        padding: 15px; /* Increased padding for better content separation */
    }

    .rounded-3 {
        border-radius: 10px; /* Softer rounded corners for the details boxes */
    }

    .btn-dark {
        background-color: #333333; /* Dark background for the button */
        color: #fff; /* White text for the button */
        border-radius: 25px; /* Rounded corners for the button */
        padding: 10px 30px; /* Bigger button for better clickability */
        font-size: 16px; /* Slightly bigger font size for the button */
    }

        .btn-dark:hover {
            background-color: #555555; /* Lighter dark background on hover */
            color: #fff; /* Keep text white on hover */
            border: none; /* Remove border on hover */
        }

    /* Profile Picture */
    img.rounded-circle {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15); /* Soft shadow for profile picture */
    }

    /* Title and Text */
    h4 {
        font-size: 24px; /* Larger text for the username */
        font-weight: 600; /* Bold username for emphasis */
    }

    h5 {
        font-size: 20px; /* Slightly smaller header for the details section */
    }

    /* Adjusting Row for Email and User Type */
    .row.mb-3 {
        margin-bottom: 20px; /* Bigger spacing between each row */
    }


</style>

<div class="container my-5">
    <h2 class="text-center mb-5 fw-bold text-dark">User Profile</h2>
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="row align-items-center">
            <!-- Profile Picture Section -->
            <div class="col-md-4 text-center">
                <img src="/images/Profile1.jpg" alt="Profile Photo" class="rounded-circle shadow-lg" style="width: 150px; height: 150px; object-fit: cover;">
                <h4 class="mt-3 text-dark fw-bold">@Model.Username</h4>
            </div>

            <!-- User Details Section -->
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="text-muted mb-4">Profile Details</h5>

                    <!-- User Info -->
                    <div class="row mb-3">
                        <div class="col-md-4 text-dark fw-bold">Email:</div>
                        <div class="col-md-8 text-dark bg-light p-3 rounded-3">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 text-dark fw-bold">User Type:</div>
                        <div class="col-md-8 text-dark bg-light p-3 rounded-3">@Model.UserType</div>
                    </div>

                    <!-- Edit Button -->
                    <div class="text-end mt-4">
                        <a href="/Home/EditProfile" class="btn btn-dark px-4 py-2 rounded-pill">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_PVFooter" model="Model" />
