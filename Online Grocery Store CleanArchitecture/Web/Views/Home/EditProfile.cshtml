@model Domain.Entities.User

<style>
    /* Edit Profile Form Styling */
    .card-body {
        background-color: #f4f4f4;
        padding: 30px;
        border-radius: 12px;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
    }

    .form-label {
        font-weight: 600;
        color: #333333;
    }

    .btn-dark {
        background-color: #333333;
        color: #fff;
        padding: 12px 30px;
        font-size: 16px;
        border-radius: 25px;
    }

        .btn-dark:hover {
            background-color: #555555;
        }

    /* Profile Picture */
    img.rounded-circle {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Input Fields */
    input[type="text"], input[type="email"], select {
        border-radius: 8px;
        padding: 12px;
        margin-top: 8px;
    }

    .form-check-label {
        font-weight: 600;
        color: #333333;
    }

    .form-check-input {
        margin-right: 10px;
    }
</style>

<partial name="_PVHome" model="Model" />

<div class="container my-5">
    <h2 class="text-center mb-5 fw-bold text-dark">Edit Profile</h2>
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="row align-items-center">
            <!-- Profile Picture Section -->
            <div class="col-md-4 text-center">
                <img src="/images/Profile1.jpg" alt="Profile Photo" class="rounded-circle shadow-lg" style="width: 150px; height: 150px; object-fit: cover;">
                <h4 class="mt-3 text-dark fw-bold">@Model.Username</h4>
            </div>

            <!-- Edit User Details Section -->
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="text-muted mb-4">Edit Your Profile</h5>

                    <!-- Edit Form -->
                    <form asp-action="EditProfile" method="post">
                        <div class="mb-3">
                            <label for="UserId" class="form-label text-dark fw-bold">User ID:</label>
                            <input type="text" class="form-control" id="UserId" name="UserId" value="@Model.UserId" readonly />
                        </div>

                        <div class="mb-3">
                            <label for="Username" class="form-label text-dark fw-bold">Username:</label>
                            <input type="text" class="form-control" id="Username" name="Username" value="@Model.Username" required />
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label text-dark fw-bold">Email:</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                        </div>

                        <!-- User Type: Using radio buttons for Customer and Admin -->
                        <div class="mb-3">
                            <label class="form-label text-dark fw-bold">User Type:</label>
                            <div class="form-check">
                                <input type="radio" id="Admin" name="UserType" value="Admin" class="form-check-input" @(Model.UserType == "Admin" ? "checked" : "") />
                                <label for="Admin" class="form-check-label">Admin</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" id="Customer" name="UserType" value="Customer" class="form-check-input" @(Model.UserType == "Customer" ? "checked" : "") />
                                <label for="Customer" class="form-check-label">Customer</label>
                            </div>
                        </div>

                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-dark px-4 py-2 rounded-pill">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_PVFooter" model="Model" />
