@{
    // ViewBag.Title = "Signup";
}

<!-- Include Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">

<style>
    body {
        background-image: url('/images/bgpic1.jpg'); /* Same background as login */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-color: #f7f7f7; /* Fallback color */
        margin: 0;
        padding: 0;
        font-family: 'Roboto', sans-serif;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9); /* Matching card style */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 20px;
        width: 100%;
        max-width: 400px;
        margin: 30px auto; /* Center the signup card */
        text-align: center;
    }

    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        text-align: left; /* Ensure labels are left-aligned */
    }

    .form-control, .form-select {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #5cb85c; /* Green button for consistency */
        border: none;
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #4cae4c; /* Slightly darker green */
            transform: scale(1.05);
        }

    .welcome-banner {
        text-align: center;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        color: #333;
        margin-bottom: 20px;
    }

        .welcome-banner h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 0;
            color: #4a8c4a;
        }

        .welcome-banner p {
            font-size: 1.5rem;
            font-weight: 400;
            margin: 10px 0 0;
            color: #2c6f2c;
        }
</style>

<div class="container">
    <div class="welcome-banner">
        <h1>Join Our Online Grocery Store</h1>
        <p>Sign up to start shopping for fresh and quality products!</p>
    </div>
    <div class="card">
        <h2 class="mb-4">Signup</h2>
        <form method="post" action="/Account/SignUp">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
            </div>
            <div class="mb-3">
                <label for="userType" class="form-label">User Type</label>
                <select id="userType" name="userType" class="form-select" required>
                    <option value="Customer">Customer</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Signup</button>
        </form>
        <p class="mt-4">
            Already have an account?
            <a href="/Account/Login" class="text-decoration-none">Login here</a>.
        </p>
    </div>
</div>